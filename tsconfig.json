{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "strictNullChecks" : true,
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      }
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }